<section>
  <h3>Bets - week {{ week }}</h3>

  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Match</th>
        <th>Result</th>
        <th>Return</th>
        {{#each players }}
        <th><a href="/users/{{ id }}">{{ username }}</a></th>
        {{/each }}
      </tr>
    </thead>
    <tbody>
      {{#each table }}    
      <tr>
        <td>{{ header.date }}</td>
        <td><a href="/matches/{{ header.id }}">{{ header.fixture }}</a></td>
        <td>{{ header.result }}</td>
        <td>{{ header.return }}</td>
        {{#each bets }}
        <td border="1">
        {{#if this }}
          <span>{{ prediction }}</span>
          <span>{{ outcome }}</span>
        {{ else }}
          &nbsp;
        {{/if }}
        </td>
        {{/each }}
      </tr>
      {{/each }}
    </tbody>
  </table>
  <a href="/bets/{{ week }}/edit" class="btn btn-primary">Edit Bets</a>
</section>
<section>
  <h3>Standings</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Player</th>
        <th>Balance</th>
      </tr>
    </thead>
    <tbody>
      {{#each standings }}
      <tr>
        <td>{{ rank }}</td>
        <td>{{ username }}</td>
        <td>{{ balance }}</td>
      </tr>
      {{/each }}
    </tbody>
  </table>
</section>
