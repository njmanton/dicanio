<section>
  <h2>{{ team.name }}</h2>

  {{#if matches }}
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Opponent</th>
        <th>League</th>
        <th>Result</th>
      </tr>
    </thead>
    <tbody>
      {{#each matches }}
      <tr>
        <td>{{ date }}</td>
        <td><a href="/teams/{{ opponent.id }}">{{ opponent.name }}</a></td>
        <td><a href="/leagues/{{ league.id }}">{{ league.name }}</a></td>
        <td>{{ result }}</td>
      </tr>
      {{/each }}
    </tbody>
  </table>
  {{ else }}
    <p>It appears this team is not associated with any matches.</p>
    {{#if user.admin}}
    <button data-tid="{{ team.id }}" class="btn btn-danger" id="teamDelete">Delete?</button>
    {{/if }}
  {{/if }}
</section>